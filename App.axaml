<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="ToDoAval.App"
             xmlns:local="using:ToDoAval"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
    <Application.Styles>
        <!-- The Last One Overrides All -->
        <SimpleTheme/>
        <StyleInclude Source="avares://ToDoAval/Assets/Themes/ObsidianTheme.axaml"/> <!-- Obsidian Theme -->
        <StyleInclude Source="avares://ToDoAval/Assets/Themes/DarkFluentTheme.axaml"/> <!-- Dark Fluent Theme -->
    </Application.Styles>

    <Application.Resources>
        <FontFamily x:Key="QuicksandFont">avares://ToDoAval/Assets/Fonts/Quicksand#Quicksand</FontFamily>
    </Application.Resources>

</Application>